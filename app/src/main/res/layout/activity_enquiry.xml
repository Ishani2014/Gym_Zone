<?xml version="1.0" encoding="utf-8"?>
    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    tools:context=".Enquiry">


                <RelativeLayout
                    android:background="#eff3f4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/enqimg"
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:cropToPadding="true"
                        android:src="@drawable/enquiryimg2" />
                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/enqimg"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="21dp"
                        android:layout_marginLeft="21dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:layout_marginBottom="21dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Enquiry"
                        android:textColor="@color/red"
                        android:textSize="40dp"
                        android:textStyle="bold" />
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/txtTitle">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
        <EditText
            android:id="@+id/edt_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitle"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/custom_borderwhite"
            android:fontFamily="@font/montserrat_light"
            android:hint="Name"
            android:inputType="text"
            android:padding="11dp"
            android:textColor="@color/red"
            android:textColorHint="@color/red" />

        <EditText
            android:id="@+id/edt_Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_Name"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/custom_borderwhite"
            android:fontFamily="@font/montserrat_light"
            android:hint="Number"
            android:inputType="number"
            android:padding="11dp"
            android:textColor="@color/red"
            android:textColorHint="@color/red" />

                    <EditText
                        android:id="@+id/edt_Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edt_Number"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/custom_borderwhite"
                        android:fontFamily="@font/montserrat_light"
                        android:hint="Email"
                        android:inputType="text"
                        android:padding="11dp"
                        android:textColor="@color/red"
                        android:textColorHint="@color/red" />

        <EditText
            android:id="@+id/edt_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_Email"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/custom_borderwhite"
            android:fontFamily="@font/montserrat_light"
            android:hint="Address"
            android:inputType="text"
            android:padding="11dp"
            android:textColor="@color/red"
            android:textColorHint="@color/red" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/edt_Address"
    android:text="Message"
    android:id="@+id/txt_message"
    android:fontFamily="@font/montserrat_light"
    android:layout_marginHorizontal="30dp"
    android:textColor="@color/red"
    android:textSize="20dp"
    />

        <EditText
            android:id="@+id/edt_Message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_message"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/custom_borderwhite"
            android:fontFamily="@font/montserrat"
            android:inputType="textMultiLine"
            android:lines="8"
            android:cursorVisible="false"
            android:maxLines="10"
            android:minLines="6"
            android:padding="11dp"
            android:scrollbars="vertical"
            android:textColor="@color/red"
            android:textColorHint="@color/red" />
    <Button
        android:id="@+id/btn_submit"
        android:layout_below="@+id/edt_Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/custom_button"
        android:text="SEND"
        android:textSize="20dp"
        android:fontFamily="@font/montserrat"
        android:layout_gravity="center"
        android:textColor="@color/white"
        app:backgroundTint="@null" />
    </RelativeLayout>
</ScrollView>
    </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>